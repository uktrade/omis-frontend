{% extends 'omis-base.njk' %}

{% block body_main_content %}
  <h1>{{ order.reference }}</h1>

  <p>{{ order.contact.name }}</p>

  <p>
    <strong>Created:</strong> {{ quote.created_on }}
  </p>
  <p>
    <strong>Expires:</strong> {{ quote.expires_on }}
  </p>

  <div>
    {% markdown %}
      {{ quote.content }}
    {% endmarkdown %}
  </div>

  {% if quote.accepted_on %}
    <p>This quote has already been accepted.</p>
  {% else %}
    <form method="post" action="/{{ publicToken }}/accept">
      <input type="hidden" name="_csrf" value="{{ CSRF_TOKEN }}">

      <button type="submit">Accept quote</button>
    </form>
  {% endif %}
{% endblock  %}
