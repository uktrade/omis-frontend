{
  "name": "omis-frontend",
  "version": "1.0.0",
  "description": "The public front end for OMIS",
  "main": "src/app/app.js",
  "engines": {
    "node": "20.11.1"
  },
  "scripts": {
    "start": "NODE_ENV=production node --use-strict src/app/server.js",
    "develop": "run-p watch:app:*",
    "clean": "del .build",
    "build": "npm run clean && webpack",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=development; LOG_LEVEL=error; JASMINE_CONFIG_PATH=src/test/app/jasmine.json jasmine",
    "test:e2e": "CYPRESS_coverage=false cypress run --config '{\"specPattern\":[\"test/end-to-end/cypress/*.js\"]}' --browser chrome",
    "test:e2e:watch": "CYPRESS_coverage=false cypress open --config '{\"specPattern\":[\"test/end-to-end/cypress/*.js\"]}' --e2e --browser chrome",
    "lint": "npm-run-all lint:all:*",
    "lint:all:js": "eslint ./test ./src",
    "lint:modified:js": "CHANGED_FILES=$(git diff --staged --name-only -- '*.js'); if [ \"$CHANGED_FILES\" ]; then eslint $(echo $CHANGED_FILES); fi",
    "watch:app:client": "webpack --watch --progress",
    "watch:app:server": "nodemon $NODE_DEBUG_OPTION --use-strict",
    "heroku-postbuild": "npm rebuild && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uktrade/omis-frontend.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uktrade/omis-frontend/issues"
  },
  "homepage": "https://github.com/uktrade/omis-frontend#readme",
  "dependencies": {
    "@babel/core": "^7.24.4",
    "@babel/plugin-transform-class-properties": "^7.24.1",
    "@babel/preset-env": "^7.24.4",
    "autoprefixer": "^10.4.19",
    "axios": "^1.6.2",
    "babel-loader": "^9.1.3",
    "body-parser": "^1.20.2",
    "browser-sync": "^3.0.2",
    "browser-sync-v3-webpack-plugin": "^0.1.0",
    "case": "^1.5.5",
    "client-sessions": "^0.8.0",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "css-loader": "^7.1.1",
    "csurf": "^1.9.0",
    "date-fns": "^2.3.0",
    "del-cli": "^5.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "express-sslify": "^1.2.0",
    "govuk_frontend_toolkit": "^9.0.1",
    "hawk": "^9.0.2",
    "image-minimizer-webpack-plugin": "^4.0.0",
    "image-webpack-loader": "^8.1.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "lodash": "^4.17.10",
    "markdown-it": "^14.0.0",
    "memorystore": "^1.6.0",
    "mini-css-extract-plugin": "^2.9.0",
    "morgan": "^1.9.0",
    "npm-run-all": "^4.1.5",
    "numeral": "^2.0.6",
    "nunjucks": "^3.2.4",
    "nunjucks-markdown": "^2.0.1",
    "postcss-loader": "^8.1.1",
    "raven": "^2.6.2",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.75.0",
    "sass-loader": "^14.2.1",
    "serve-favicon": "^2.5.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.91.0",
    "webpack-assets-manifest": "^5.2.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.10",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "cypress": "^13.7.3",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jasmine": "^5.1.0",
    "jasmine-core": "^5.1.2",
    "nock": "^13.5.4",
    "nodemon": "^3.1.0",
    "proxyquire": "^2.0.1"
  },
  "overrides": {
    "semver-regex": "3.1.4",
    "qs": "6.2.4",
    "http-cache-semantics": "4.1.1",
    "semver": "^7.5.2",
    "trim-newlines": "^3.0.1"
  }
}
