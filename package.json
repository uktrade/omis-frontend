{
  "name": "omis-frontend",
  "version": "1.0.0",
  "description": "The public front end for OMIS",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=development; LOG_LEVEL=error; JASMINE_CONFIG_PATH=src/test/app/jasmine.json jasmine",
    "lint": "npm-run-all lint:all:*",
    "lint:all:js": "eslint ./test ./src",
    "lint:modified:js": "CHANGED_FILES=$(git diff --staged --name-only -- '*.js'); if [ \"$CHANGED_FILES\" ]; then eslint $(echo $CHANGED_FILES); fi",
    "start": "NODE_ENV=production node --use-strict src/app/server.js",
    "watch": "nodemon --use-strict src/app/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uktrade/omis-frontend.git"
  },
  "author": "Graham Veal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uktrade/omis-frontend/issues"
  },
  "homepage": "https://github.com/uktrade/omis-frontend#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "express": "4.15.4",
    "express-session": "^1.15.5",
    "lodash": "^4.17.4",
    "markdown-it": "^8.4.0",
    "memorystore": "^1.5.0",
    "morgan": "1.8.2",
    "npm-run-all": "^4.1.1",
    "nunjucks": "3.0.1",
    "nunjucks-markdown": "^2.0.1",
    "raven": "2.1.2",
    "request": "2.81.0",
    "request-promise-native": "^1.0.5",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "compression": "1.7.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.5.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jasmine": "2.7.0",
    "jasmine-core": "2.7.0",
    "nodemon": "1.11.0",
    "proxyquire": "1.8.0"
  }
}
