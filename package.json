{
  "name": "omis-frontend",
  "version": "1.0.0",
  "description": "The public front end for OMIS",
  "main": "src/app/app.js",
  "engines": {
    "node": "16.18.1"
  },
  "scripts": {
    "start": "NODE_ENV=production node --use-strict src/app/server.js",
    "develop": "run-p watch:app:*",
    "clean": "del .build",
    "build": "npm run clean && webpack",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=development; LOG_LEVEL=error; JASMINE_CONFIG_PATH=src/test/app/jasmine.json jasmine",
    "lint": "npm-run-all lint:all:*",
    "lint:all:js": "eslint ./test ./src",
    "lint:modified:js": "CHANGED_FILES=$(git diff --staged --name-only -- '*.js'); if [ \"$CHANGED_FILES\" ]; then eslint $(echo $CHANGED_FILES); fi",
    "watch:app:client": "webpack --watch --progress",
    "watch:app:server": "nodemon $NODE_DEBUG_OPTION --use-strict",
    "heroku-postbuild": "npm rebuild && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uktrade/omis-frontend.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uktrade/omis-frontend/issues"
  },
  "homepage": "https://github.com/uktrade/omis-frontend#readme",
  "dependencies": {
    "@babel/core": "^7.20.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.13",
    "axios": "^1.1.3",
    "babel-loader": "^9.1.0",
    "body-parser": "^1.18.3",
    "browser-sync": "^2.27.10",
    "browser-sync-webpack-plugin": "^2.3.0",
    "case": "^1.5.5",
    "client-sessions": "^0.8.0",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "css-loader": "^6.7.2",
    "csurf": "^1.9.0",
    "date-fns": "^2.29.3",
    "del-cli": "^5.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-sslify": "^1.2.0",
    "govuk_frontend_toolkit": "^9.0.1",
    "hawk": "^9.0.1",
    "image-webpack-loader": "^8.1.0",
    "lodash": "^4.17.10",
    "markdown-it": "^13.0.1",
    "memorystore": "^1.6.0",
    "mini-css-extract-plugin": "^2.7.1",
    "morgan": "^1.9.0",
    "npm-run-all": "^4.1.5",
    "numeral": "^2.0.6",
    "nunjucks": "^3.1.3",
    "nunjucks-markdown": "^2.0.1",
    "postcss-loader": "^7.0.2",
    "raven": "^2.6.2",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.56.1",
    "sass-loader": "^13.2.0",
    "serve-favicon": "^2.5.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.75.0",
    "webpack-assets-manifest": "^5.1.0",
    "webpack-cli": "^5.0.0",
    "webpack-merge": "^5.8.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "eslint": "^8.29.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jasmine": "^4.5.0",
    "jasmine-core": "^4.5.0",
    "nock": "^13.2.9",
    "nodemon": "^2.0.20",
    "proxyquire": "^2.0.1"
  },
  "overrides": {
    "semver-regex": "3.1.4"
  }
}
